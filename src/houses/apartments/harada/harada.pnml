// Spritelayouts

// harada 6 Storey

// Normal Sprites
spritelayout sprlay_harada_6L_norm {
	ground {
		sprite: spr_harada_ground(construction_state);
	}
	building {
		sprite: spr_harada_6L (construction_state);
		recolour_mode: RECOLOUR_REMAP; 
		palette: PALETTE_USE_DEFAULT;
	}
}

