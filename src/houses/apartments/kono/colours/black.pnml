
// _black_
    // Norm Sprites
    spritelayout sprlay_kono_v_xL_black_norm {
        ground {
            sprite: spr_kono_v_ground (construction_state);
        }
        building {
            sprite: spr_kono_v_xL_norm (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 11;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    // Snow Sprites
    spritelayout sprlay_kono_v_xL_black_snow {
        ground {
            sprite: spr_kono_v_ground_snow (construction_state);
        }
        building {
            sprite: spr_kono_v_xL_snow (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 11;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_kono_v_xL_black_snow,terrain_type) {
	TILETYPE_SNOW: sprlay_kono_v_xL_black_snow;
	sprlay_kono_v_xL_black_norm;
    }