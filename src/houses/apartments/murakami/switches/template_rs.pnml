// Basic Colors
switch (FEAT_HOUSES, SELF, switch_murakami_v_item_basic_colors, random_bits % 16 ) {
	0: 		switch_murakami_v_height1_mauve_snow;
	1..2: 	switch_murakami_v_height1_brown2_snow;
	3..4: 	switch_murakami_v_height1_brown1_snow;
	5..6: 	switch_murakami_v_height1_grey_snow;
	7: 		switch_murakami_v_height1_white_snow;
	8: 		switch_murakami_v_height2_mauve_snow;
	9..10: 	switch_murakami_v_height2_brown2_snow;
	11..12: switch_murakami_v_height2_brown1_snow;
	13..14: switch_murakami_v_height2_grey_snow;
	15: 	switch_murakami_v_height2_white_snow;
}

// Modern Colors
switch (FEAT_HOUSES, SELF, switch_murakami_v_item_modern_colors, random_bits % 30 ) {
	0..1: 	switch_murakami_v_height1_mauve_snow;
	2..4: 	switch_murakami_v_height1_brown2_snow;
	5..7: 	switch_murakami_v_height1_brown1_snow;
	8..10: 	switch_murakami_v_height1_grey_snow;
	11: 	switch_murakami_v_height1_white_snow;
	12: 	switch_murakami_v_height1_dark_green_snow;
	13: 	switch_murakami_v_height1_peach_snow;
	14: 	switch_murakami_v_height1_light_blue_snow;
	15..16:	switch_murakami_v_height2_mauve_snow;
	17..19:	switch_murakami_v_height2_brown2_snow;
	20..22:	switch_murakami_v_height2_brown1_snow;
	23..25:	switch_murakami_v_height2_grey_snow;
	26: 	switch_murakami_v_height2_white_snow;
	27: 	switch_murakami_v_height2_dark_green_snow;
	28: 	switch_murakami_v_height2_peach_snow;
	29: 	switch_murakami_v_height2_light_blue_snow;
}

// Which Period?
switch (FEAT_HOUSES, SELF, switch_murakami_v_item_snow, current_year - age) {
	0..1959: switch_murakami_v_item_basic_colors;
	switch_murakami_v_item_modern_colors;
}