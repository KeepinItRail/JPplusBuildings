// Basic Colors
switch (FEAT_HOUSES, SELF, switch_nakamura_b_item_basic_colors, random_bits % 20) {
	0: 		switch_nakamura_b_height1_mauve_snow;
	1..2: 	switch_nakamura_b_height1_brown2_snow;
	3..4: 	switch_nakamura_b_height1_midgrey_snow;
	5..6: 	switch_nakamura_b_height1_brown1_snow;
	7..8: 	switch_nakamura_b_height1_grey_snow;
	9: 		switch_nakamura_b_height1_white_snow;
	10: 	switch_nakamura_b_height2_mauve_snow;
	11..12:	switch_nakamura_b_height2_brown2_snow;
	13..14: switch_nakamura_b_height2_midgrey_snow;
	15..16: switch_nakamura_b_height2_brown1_snow;
	17..18: switch_nakamura_b_height2_grey_snow;
	19: 	switch_nakamura_b_height2_white_snow;
}

// Modern Colors
switch (FEAT_HOUSES, SELF, switch_nakamura_b_item_modern_colors, random_bits % 38 ) {
	0..1: 	switch_nakamura_b_height1_mauve_snow;
	2..4: 	switch_nakamura_b_height1_brown2_snow;
	5..7: 	switch_nakamura_b_height1_brown1_snow;
	8..10: 	switch_nakamura_b_height1_grey_snow;
	11: 	switch_nakamura_b_height1_white_snow;
	12: 	switch_nakamura_b_height1_dark_green_snow;
	13: 	switch_nakamura_b_height1_peach_snow;
	14: 	switch_nakamura_b_height1_light_blue_snow;
	15: 	switch_nakamura_b_height1_red_brown_snow;
	16..17: switch_nakamura_b_height1_midgrey_snow;
	18: 	switch_nakamura_b_height1_black_snow;
	19..20: switch_nakamura_b_height1_mauve_snow;
	21..23:	switch_nakamura_b_height2_brown2_snow;
	24..26:	switch_nakamura_b_height2_brown1_snow;
	27..29:	switch_nakamura_b_height2_grey_snow;
	30: 	switch_nakamura_b_height2_white_snow;
	31: 	switch_nakamura_b_height2_dark_green_snow;
	32: 	switch_nakamura_b_height2_peach_snow;
	33: 	switch_nakamura_b_height2_light_blue_snow;
	34: 	switch_nakamura_b_height2_red_brown_snow;
	35..36: switch_nakamura_b_height2_midgrey_snow;
	37: 	switch_nakamura_b_height2_black_snow;
}

// Which Period?
switch (FEAT_HOUSES, SELF, switch_nakamura_b_item_snow, current_year - age) {
	0..1959: switch_nakamura_b_item_basic_colors;
	switch_nakamura_b_item_modern_colors;
}