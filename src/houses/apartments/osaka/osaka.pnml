// Choose between Normal Sprites and Snow Sprites
switch(FEAT_HOUSES, SELF, switch_osaka_a_snow,terrain_type) {
	TILETYPE_SNOW: sprlay_osaka_a_snow;
	sprlay_osaka_a;
}
