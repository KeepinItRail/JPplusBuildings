// Spritelayouts

// Normal Sprites
spritelayout sprlay_osaka_a {
	ground {
		sprite: spr_ground_osaka_a (construction_state);
	}
	building {
		sprite: spr_build_osaka_a (construction_state);
		//recolour_mode: RECOLOUR_REMAP; 
		//palette: PALETTE_USE_DEFAULT;
	}
}

