
// _black_
    // Norm Sprites
    spritelayout sprlay_osaka_b_xL_black_norm {
        ground {
            sprite: spr_osaka_b_ground (construction_state);
        }
        building {
            sprite: spr_osaka_b_xL_norm (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 11;
            xoffset: 0;
            yoffset: 0;
        }
    }

    // Snow Sprites
    spritelayout sprlay_osaka_b_xL_black_snow {
        ground {
            sprite: spr_osaka_b_ground_snow (construction_state);
        }
        building {
            sprite: spr_osaka_b_xL_snow (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 11;
            xoffset: 0;
            yoffset: 0;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_osaka_b_xL_black_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_osaka_b_xL_black_snow;
	    sprlay_osaka_b_xL_black_norm;
    }

