// Spritelayouts

// 5-story
// Norm Sprites
spritelayout sprlay_shibata_5L_norm {
	ground {
		sprite: spr_shibata_ground (construction_state);
	}
	building {
		sprite: spr_shibata_5L_norm (construction_state);
		recolour_mode: RECOLOUR_REMAP; 
		palette: PALETTE_USE_DEFAULT;
	}
}

// Snow Sprites
spritelayout sprlay_shibata_5L_snow {
