// Spritelayouts

// tanaguchi 6 Storey

// Normal Sprites
spritelayout sprlay_tanaguchi_6L_norm {
	ground {
		sprite: spr_tanaguchi_ground(3);
	}
	building {
		sprite: spr_tanaguchi_6L (3);
		recolour_mode: RECOLOUR_REMAP; 
		palette: PALETTE_USE_DEFAULT;
	}
}

// Snow Sprites
spritelayout sprlay_tanaguchi_6L_snow {
	ground {
		sprite: spr_tanaguchi_ground_snow(3);
	}
	building {
		sprite: spr_tanaguchi_6L_snow(3);
		recolour_mode: RECOLOUR_REMAP; 
		palette: PALETTE_USE_DEFAULT;
	}
}


// Normal Sprites
spritelayout sprlay_tanaguchi_11L_norm {
	ground {
		sprite: spr_tanaguchi_ground(3);
	}
	building {
		sprite: spr_tanaguchi_11L (3);
		recolour_mode: RECOLOUR_REMAP; 
		palette: PALETTE_USE_DEFAULT;
	}
}

// Snow Sprites
spritelayout sprlay_tanaguchi_11L_snow {
