// Choose between Normal Sprites and Snow Sprites

switch(FEAT_HOUSES, SELF, switch_tanaguchi_6L_snow,terrain_type) {
	TILETYPE_SNOW: sprlay_tanaguchi_6L_snow;
	sprlay_tanaguchi_6L_norm;
}

