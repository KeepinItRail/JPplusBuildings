// Construction Check
switch (FEAT_HOUSES, SELF, switch_tokyo_con_check, 	
	FuncServicePASS() &&																				// Passenger Check
	( (HasRoadAdjacentNE() && HasRoadAdjacentE() ) || (HasRoadAdjacentSW() && HasRoadAdjacentS() ) )	// Road Adjacency			
) {return;}	

item(FEAT_HOUSES, item_tokyo, 99, HOUSE_SIZE_1X2){
	property {
		substitute: 				7; 													
		name: 						string(NAME_TOKYO);
		building_flags: 			bitmask(HOUSE_FLAG_NOT_SLOPED);
		population: 				220;
		accepted_cargos: 			[[PASS, 8],[MAIL, 4],[GOOD, 4]];
		local_authority_impact: 	80;
		removal_cost_multiplier: 	80;
		probability: 				1;
		years_available: 			[1970,0xFFFF];
		minimum_lifetime: 			5;
		availability_mask: 			[bitmask(							// JPS Zones = 4 & 3, ITL = All Zones
										TOWNZONE_CENTRE				// 4
										//TOWNZONE_INNER_SUBURB		// 3
										//TOWNZONE_OUTER_SUBURB		// 2
										//TOWNZONE_OUTSKIRT			// 1
										//TOWNZONE_EDGE				// 0
									), bitmask(
										CLIMATE_TEMPERATE,
										CLIMATE_ARCTIC, ABOVE_SNOWLINE,
										CLIMATE_TROPIC
									)];
		building_class:				4;	
		}
	graphics {
		graphics_north: 			switch_tokyo_north;
		graphics_east: 				switch_tokyo_east;
		construction_check: 		switch_tokyo_con_check; 	
		cargo_production: 			func_produce(22,4);
		//colour: 					rand_recolor_tokyo;
	} 					
}

