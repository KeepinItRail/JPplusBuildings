// Begin tokyo

// Building Sprites
spriteset (spr_build_tokyo_north, 						"src/gfx/apartments/tokyo/building.png") 					{template_house_128(1,1)}
spriteset (spr_build_tokyo_east, 						"src/gfx/apartments/tokyo/building.png") 					{template_house_128_wide(261,1)}

spriteset (spr_build_tokyo_north_snow, 					"src/gfx/apartments/tokyo/building.png") 					{template_house_128(1,130)}
spriteset (spr_build_tokyo_east_snow, 					"src/gfx/apartments/tokyo/building.png") 					{template_house_128_wide(261,130)}

// Ground Sprites
spriteset (spr_ground_tokyo_north, 						"src/gfx/apartments/tokyo/ground.png") 						{template_ground(1,1)}
spriteset (spr_ground_tokyo_north_snow, 				"src/gfx/apartments/tokyo/ground.png") 						{template_ground(1,33)}

spriteset (spr_ground_tokyo_east, 						"src/gfx/apartments/tokyo/ground.png") 						{template_ground(261,1)}
spriteset (spr_ground_tokyo_east_snow, 					"src/gfx/apartments/tokyo/ground.png") 						{template_ground(261,33)}

// Normal Sprites
spritelayout sprlay_tokyo_north {
	ground {
		sprite: spr_ground_tokyo_north (construction_state);
	}
	building {
		sprite: spr_build_tokyo_north (construction_state);
		//recolour_mode: RECOLOUR_REMAP; 
		//palette: PALETTE_USE_DEFAULT;
	}
}

spritelayout sprlay_tokyo_east {
	ground {
		sprite: spr_ground_tokyo_east (construction_state);
	}
	building {
		sprite: spr_build_tokyo_east (construction_state);
		yoffset:  2;
		//recolour_mode: RECOLOUR_REMAP; 
		//palette: PALETTE_USE_DEFAULT;
	}
}

// Snow Sprites
spritelayout sprlay_tokyo_snow_north {
	ground {
		sprite: spr_ground_tokyo_north_snow (construction_state);
	}
	building {
		sprite: spr_build_tokyo_north_snow (construction_state);
		//recolour_mode: RECOLOUR_REMAP; 
		//palette: PALETTE_USE_DEFAULT;
	}
}

spritelayout sprlay_tokyo_snow_east {
	ground {
		sprite: spr_ground_tokyo_east_snow (construction_state);
	}
	building {
		sprite: spr_build_tokyo_east_snow (construction_state);
		yoffset:  2;
		//recolour_mode: RECOLOUR_REMAP; 
		//palette: PALETTE_USE_DEFAULT;
	}
}

// Choose between Normal Sprites and Snow Sprites
switch(FEAT_HOUSES, SELF, switch_tokyo_north,terrain_type) {
	TILETYPE_SNOW: sprlay_tokyo_snow_north;
	sprlay_tokyo_north;
}
switch(FEAT_HOUSES, SELF, switch_tokyo_east,terrain_type) {
	TILETYPE_SNOW: sprlay_tokyo_snow_east;
	sprlay_tokyo_east;
}

