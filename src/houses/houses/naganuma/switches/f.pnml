// Basic Colors
random_switch (FEAT_HOUSES, SELF, switch_naganuma_f_xL_basic_colors) {
	1: switch_naganuma_f_xL_mauve_snow;
	2: switch_naganuma_f_xL_brown2_snow;
	2: switch_naganuma_f_xL_brown1_snow;
	2: switch_naganuma_f_xL_grey_snow;
	1: switch_naganuma_f_xL_red_brown_snow;
	2: switch_naganuma_f_xL_black_snow;
}

// Modern Colors
random_switch (FEAT_HOUSES, SELF, switch_naganuma_f_xL_modern_colors) {
	2: switch_naganuma_f_xL_mauve_snow;
	3: switch_naganuma_f_xL_brown2_snow;
	3: switch_naganuma_f_xL_brown1_snow;
	3: switch_naganuma_f_xL_grey_snow;
	1: switch_naganuma_f_xL_dark_green_snow;
	1: switch_naganuma_f_xL_dark_blue_snow;
	2: switch_naganuma_f_xL_gold_snow;
	2: switch_naganuma_f_xL_black_snow;
	2: switch_naganuma_f_xL_red_brown_snow;
	2: switch_naganuma_f_xL_red_snow;
}

// Which Period?
switch (FEAT_HOUSES, SELF, switch_naganuma_f_xL_colors_era_check, current_year - age) {
	0..1959: switch_naganuma_f_xL_basic_colors;
	switch_naganuma_f_xL_modern_colors;
}

switch (FEAT_HOUSES, PARENT, switch_naganuma_f_xL_snow, population_uncapped >= 1000 ) {
	1: switch_naganuma_f_xL_colors_era_check;
	switch_naganuma_f_xL_basic_colors;
}