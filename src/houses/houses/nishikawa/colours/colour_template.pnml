
// _clr_
    // Norm Sprites
    spritelayout sprlay_nishikawa_v_xL_clr_norm {
        ground {
            sprite: spr_ground_grass (construction_state);
        }
        building {
            sprite: spr_nishikawa_v_xL_norm (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + _c_;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    // Snow Sprites
    spritelayout sprlay_nishikawa_v_xL_clr_snow {
        ground {
            sprite: spr_ground_snow (construction_state);
        }
        building {
            sprite: spr_nishikawa_v_xL_snow (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + _c_;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_nishikawa_v_xL_clr_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_nishikawa_v_xL_clr_snow;
	    sprlay_nishikawa_v_xL_clr_norm;
    }

