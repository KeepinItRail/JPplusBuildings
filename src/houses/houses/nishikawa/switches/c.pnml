// Basic Colors
random_switch (FEAT_HOUSES, SELF, switch_nishikawa_c_xL_basic_colors) {
	1: switch_nishikawa_c_xL_mauve_snow;
	2: switch_nishikawa_c_xL_brown2_snow;
	2: switch_nishikawa_c_xL_brown1_snow;
	2: switch_nishikawa_c_xL_grey_snow;
	1: switch_nishikawa_c_xL_red_brown_snow;
}

// Modern Colors
random_switch (FEAT_HOUSES, SELF, switch_nishikawa_c_xL_modern_colors) {
	2: switch_nishikawa_c_xL_mauve_snow;
	3: switch_nishikawa_c_xL_brown2_snow;
	3: switch_nishikawa_c_xL_brown1_snow;
	3: switch_nishikawa_c_xL_grey_snow;
	1: switch_nishikawa_c_xL_white_snow;
	1: switch_nishikawa_c_xL_dark_green_snow;
	1: switch_nishikawa_c_xL_peach_snow;
	1: switch_nishikawa_c_xL_light_blue_snow;
	2: switch_nishikawa_c_xL_gold_snow;
	1: switch_nishikawa_c_xL_black_snow;
	2: switch_nishikawa_c_xL_red_brown_snow;
}

// Which Period?
switch (FEAT_HOUSES, SELF, switch_nishikawa_c_xL_colors_era_check, current_year - age) {
	0..1959: switch_nishikawa_c_xL_basic_colors;
	switch_nishikawa_c_xL_modern_colors;
}

switch (FEAT_HOUSES, PARENT, switch_nishikawa_c_xL_snow, population_uncapped >= 1000 ) {
	1: switch_nishikawa_c_xL_colors_era_check;
	switch_nishikawa_c_xL_basic_colors;
}