
// _gold_
    // Norm Sprites
    spritelayout sprlay_townhouses_02_v_xL_gold_norm {
        ground {
            sprite: spr_ground_grass (construction_state);
        }
        building {
            sprite: spr_townhouses_02_v_xL_norm (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 12;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    // Snow Sprites
    spritelayout sprlay_townhouses_02_v_xL_gold_snow {
        ground {
            sprite: spr_ground_snow (construction_state);
        }
        building {
            sprite: spr_townhouses_02_v_xL_snow (construction_state);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 12;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_townhouses_02_v_xL_gold_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_townhouses_02_v_xL_gold_snow;
	    sprlay_townhouses_02_v_xL_gold_norm;
    }