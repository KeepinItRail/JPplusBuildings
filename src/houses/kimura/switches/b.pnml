// Basic Colors
switch (FEAT_HOUSES, SELF, switch_kimura_b_item_basic_colors, random_bits % 10 ) {
	0: switch_kimura_b_height1_mauve_snow;
	1: switch_kimura_b_height1_brown2_snow;
	2: switch_kimura_b_height1_brown1_snow;
	3: switch_kimura_b_height1_grey_snow;
	4: switch_kimura_b_height1_white_snow;
	5: switch_kimura_b_height2_mauve_snow;
	6: switch_kimura_b_height2_brown2_snow;
	7: switch_kimura_b_height2_brown1_snow;
	8: switch_kimura_b_height2_grey_snow;
	9: switch_kimura_b_height2_white_snow;
}

// Modern Colors
switch (FEAT_HOUSES, SELF, switch_kimura_b_item_modern_colors, random_bits % 14 ) {
	0: switch_kimura_b_height1_mauve_snow;
	1: switch_kimura_b_height1_brown2_snow;
	2: switch_kimura_b_height1_brown1_snow;
	3: switch_kimura_b_height1_grey_snow;
	4: switch_kimura_b_height1_white_snow;
	5: switch_kimura_b_height1_dark_green_snow;
	6: switch_kimura_b_height1_peach_snow;
	7: switch_kimura_b_height2_mauve_snow;
	8: switch_kimura_b_height2_brown2_snow;
	9: switch_kimura_b_height2_brown1_snow;
	10: switch_kimura_b_height2_grey_snow;
	11: switch_kimura_b_height2_white_snow;
	12: switch_kimura_b_height2_dark_green_snow;
	13: switch_kimura_b_height2_peach_snow;
}

// Which Period?
switch (FEAT_HOUSES, SELF, switch_kimura_b_item_snow, current_year - age) {
	0..1959: switch_kimura_b_item_basic_colors;
	switch_kimura_b_item_modern_colors;
}