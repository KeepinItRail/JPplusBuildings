// Begin pachinko_01

// Building Sprites
spriteset (spr_build_pachinko_01, 						"src/houses/landmarks/pachinko_01/building.png") 				{template_house_128_wide(1,1)}
spriteset (spr_build_pachinko_01_snow, 					"src/houses/landmarks/pachinko_01/building.png") 				{template_house_128_wide(400,1)}

// Ground Sprites
spriteset (spr_ground_pachinko_01, 						"src/houses/landmarks/pachinko_01/ground.png") 					{template_ground(1,1)}
spriteset (spr_ground_pachinko_01_snow, 				"src/houses/landmarks/pachinko_01/ground.png") 					{template_ground(1,33)}

// Normal Sprites
spritelayout sprlay_pachinko_01 {
	ground {
		sprite: spr_ground_pachinko_01(construction_state);
	}
	building {
		sprite: spr_build_pachinko_01(construction_state);
		//recolour_mode: RECOLOUR_REMAP; 
		//palette: PALETTE_USE_DEFAULT;
	}
}

// Snow Sprites
spritelayout sprlay_pachinko_01_snow {
	ground {
		sprite: spr_ground_pachinko_01_snow(construction_state);
	}
	building {
		sprite: spr_build_pachinko_01_snow(construction_state);
		//recolour_mode: RECOLOUR_REMAP; 
		//palette: PALETTE_USE_DEFAULT;
	}
}

// Choose between Normal Sprites and Snow Sprites
switch(FEAT_HOUSES, SELF, switch_pachinko_01,terrain_type) {
	TILETYPE_SNOW: sprlay_pachinko_01_snow;
	sprlay_pachinko_01;
}

