// Construction Check
switch (FEAT_HOUSES, SELF, switch_pachinko_01_con_check, 
	FuncServicePASS() &&		// Must have road to the SW
	TileGapByType(30)			// Can't appear within 30 tiles of another
) {return;}	

item(FEAT_HOUSES, item_pachinko_01){
	property {
		substitute: 				29; 													
		name: 						string(NAME_PACHINKO_01);
		building_flags: 			bitmask(HOUSE_FLAG_NOT_SLOPED);		// Want flat land
		population: 				50;									// Agreed to JPS
		accepted_cargos: 			[[PASS, 8],[MAIL, 1]];							
		local_authority_impact: 	80;
		removal_cost_multiplier: 	80;
		probability: 				10;
		years_available: 			[1980,0xFFFF];	
		minimum_lifetime: 			7;
		availability_mask: 			[bitmask(
										TOWNZONE_CENTRE,			// 4
										TOWNZONE_INNER_SUBURB,		// 3
										TOWNZONE_OUTER_SUBURB,		// 2
										TOWNZONE_OUTSKIRT			// 1
										//TOWNZONE_EDGE				// 0
										), 
									bitmask(
										CLIMATE_TEMPERATE, 
										CLIMATE_ARCTIC, 
										ABOVE_SNOWLINE
										)];
		//building_class:			2;	
		}
	graphics {
		default: 					switch_pachinko_01;
		construction_check:			switch_pachinko_01_con_check;
		cargo_production: 			func_produce(20,5);
		//colour: 					rand_recolor_pachinko_01;
	}
}

