// Begin offices_09

// Building Sprites
spriteset (spr_offices_09, 							"src/gfx/offices/offices_09/building.png") 						{template_house_150_wide(1,1)}
spriteset (spr_offices_09_snow, 					"src/gfx/offices/offices_09/building.png") 						{template_house_150_wide(1,152)}

// Ground Tiles
spriteset (spr_offices_09_ground, 					"src/gfx/offices/offices_09/ground.png") 						{template_ground(1,1)}
spriteset (spr_offices_09_ground_snow, 				"src/gfx/offices/offices_09/ground.png") 						{template_ground(1,33)}

spritelayout sprlay_offices_09_norm {
	ground {
		sprite: 		spr_offices_09_ground(construction_state);
	}
	building {
		sprite: 		spr_offices_09(construction_state);
		//recolour_mode: 	RECOLOUR_REMAP; 
		//palette: 		PALETTE_USE_DEFAULT;
	}
}

spritelayout sprlay_offices_09_snow {
	ground {
		sprite: 		spr_offices_09_ground_snow(construction_state);
	}
	building {
		sprite: 		spr_offices_09_snow(construction_state);
		//recolour_mode: 	RECOLOUR_REMAP; 
		//palette: 		PALETTE_USE_DEFAULT;
	}
}

// Choose between Normal Sprites and Snow Sprites
switch(FEAT_HOUSES, SELF, switch_offices_09_sprites,terrain_type) {
	TILETYPE_SNOW: sprlay_offices_09_snow;
	sprlay_offices_09_norm;
}

