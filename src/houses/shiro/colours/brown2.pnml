
// _brown2_
    // Norm Sprites
    spritelayout sprlay_shiro_v_xL_brown2_norm {
        ground {
            sprite: spr_ground_shiro (_construction_state_);
        }
        building {
            sprite: spr_shiro_v_xL_norm (_construction_state_);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 3;
            hide_sprite: _hide_;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    // Snow Sprites
    spritelayout sprlay_shiro_v_xL_brown2_snow {
        ground {
            sprite: spr_ground_shiro (_construction_state_);
        }
        building {
            sprite: spr_shiro_v_xL_snow (_construction_state_);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 3;
            hide_sprite: _hide_;
            xoffset: _xoff_;
            yoffset: _yoff_;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_shiro_v_xL_brown2_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_shiro_v_xL_brown2_snow;
	    sprlay_shiro_v_xL_brown2_norm;
    }