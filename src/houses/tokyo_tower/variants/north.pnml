
// tokyo_tower all colours

// _red_brown_
    // Norm Sprites
    spritelayout sprlay_tokyo_tower_north_xL_red_brown_norm {
        ground {
            sprite: spr_tokyo_tower_ground (0);
        }
        building {
            sprite: spr_tokyo_tower_xL_norm (0);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 13;
        }
    }

    // Snow Sprites
    spritelayout sprlay_tokyo_tower_north_xL_red_brown_snow {
        ground {
            sprite: spr_tokyo_tower_ground_snow (0);
        }
        building {
            sprite: spr_tokyo_tower_xL_snow (0);
            recolour_mode: RECOLOUR_REMAP; 
            palette: recolour_remap + 13;
        }
    }

    switch(FEAT_HOUSES, SELF, switch_tokyo_tower_north_xL_red_brown_snow,terrain_type) {
	    TILETYPE_SNOW: sprlay_tokyo_tower_north_xL_red_brown_snow;
	    sprlay_tokyo_tower_north_xL_red_brown_norm;
    }
